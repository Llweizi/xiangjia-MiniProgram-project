<view class="profile">
  <van-cell center title="头像">
    <van-icon slot="right-icon" name="arrow" size="16" color="#c3c3c5" />
    <button open-type="chooseAvatar"    bind:chooseavatar="handleChooseAvatar"  class="button" size="mini">
      <image class="avatar" src="{{userInfo.avatar}}"></image>
    </button>
  </van-cell>
  <van-field type="nickname"       bind:blur="handleNickNameBlur"   value="{{userInfo.nickName}}" center label="昵称" input-align="right"  placeholder="请输入昵称" />
</view>
